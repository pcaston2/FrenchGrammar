@model FrenchGrammar.Models.VerbViewModel

@{
    ViewData["Title"] = "Verb Test";
}
<div>
    <dl>
        <dt>Conjugate:</dt>
        <dd>@Model.pronoun <i>@Model.verb</i> <strong>(@Model.mood @Model.tense)</strong></dd>
    </dl>
    <form role="form" data-toggle="validator">
        <div class="form-group">
            <label for="inputPassword" class="control-label">Response:</label>
            <div class="form-inline row">
                <div class="form-group col-sm-6">
                    <input type="text" class="form-control" id="inputPassword" data-match="#inputPasswordConfirm" data-match-error="Not quite..." autocomplete="off">
                    <br />
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-sm-6">
                    <input type="hidden" class="form-control" id="inputPasswordConfirm" value="@Model.conjugation">
                </div>
            </div>
        </div>
        <button type="button" data-toggle="collapse" data-target="#answer">Answer</button>

        <div class="collapse" id="answer">
            <h3>@Model.conjugation</h3>
        </div>

        <button action="submit">Next</button>
    </form>

    
</div>
<div>

</div>
